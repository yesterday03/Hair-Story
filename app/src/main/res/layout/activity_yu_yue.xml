        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="1998"
        android:textColor="@color/rad"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
